<%- include("partials/header") %>

<div class="flex-grow-1 container py-4">

    <div class="p-4 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">Centered hero</h1>

        <% if (!errorFetching) { %>

            <form method="GET" action="/" class="mb-3">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Show <%= perPage %>
                    </button>
                    <ul class="dropdown-menu">
                        <% [25, 50, 100, 200].forEach(limit => { %>
                            <li>
                                <button type="submit" name="perPage" value="<%= limit %>" class="dropdown-item">
                                    Show <%= limit %>
                                </button>
                            </li>                  
                        <% }); %>
                    </ul>
                </div>
                <input type="hidden" name="page" value="<%= currentPage %>">
            </form>


            <div class="container">
                <table class="table table-borderless table-hover mb-0">
                    <thead class="sticky-top bg-white header-shadow" style="z-index: 1">
                        <tr class="align-middle">
                            <th scope="col" class="text-start">#</th>
                            <th scope="col" class="text-start">Coin</th>
                            <th scope="col" class="text-end">Price</th>
                            <th scope="col" class="text-end">24h %</th>
                            <th scope="col" class="text-end">24h Volume</th>
                            <th scope="col" class="text-end">Market Cap</th>
                        </tr>
                    </thead>
                    <tbody class="">
                        <% coins.forEach(coin => { %>
                            <tr class="border-bottom">
                                <td class=" py-3 text-start"><%= coin.market_cap_rank %></td>
                                <td class="py-3"> 
                                    <a href="/coins/<%= coin.id %>" class="d-flex align-items-center gap-2 text-decoration-none text-dark w-100 h-100">
                                        <img src="<%= coin.image %>" class="img-fluid" 
                                            style="max-width: 32px;" alt="coin logo">
                                        <span class="fw-medium"><%= coin.name %></span>      
                                        <span class="text-muted"><%= coin.symbol.toUpperCase() %></span>
                                    </a>
                                </td>
                                <td class="py-3 text-end">$ <%= coin.current_price.toLocaleString() %></td>
                                <td class="py-3 text-end"><%= coin.price_change_percentage_24h.toFixed(1) %> %</td>
                                <td class="py-3 text-end">$ <%= coin.total_volume.toLocaleString() %></td>
                                <td class="py-3 text-end">$ <%= coin.market_cap.toLocaleString() %></td>
                            </tr>       
                        <% }) %>
                    </tbody>
                </table>
            </div>
    

            <nav aria-label="...">
                <ul class="pagination d-flex justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="<%= currentPage - 1 === 1 ? "/" : "/?page=" + (currentPage - 1) + "&perPage=" + perPage %>">Previous</a>
                        </li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++ ) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="<%= i === 1 ? "/" : "/?page=" + i %>&perPage=<%= perPage %>"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (currentPage < totalPages ) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?page=<%= currentPage + 1 %>&perPage=<%= perPage %>">Next</a>
                        </li>
                    <% } %>
                </ul>
            </nav>

        <% } else { %>
            <div class="p-4 text-center">
                <h1 class="display-5 fw-bold text-body-emphasis">
                    Couldn't load coin list. Try again later...
                </h1>
            </div>
        <% } %>

    </div>
</div>

<%- include("partials/footer") %>
